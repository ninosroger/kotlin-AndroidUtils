<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:id="@+id/classification_top"
            android:layout_width="80dp"
            android:layout_height="3dp"
            android:background="@drawable/rounded_rectangle_classification_top_gray" />

        <TextView
            android:id="@+id/classification_name"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingTop="16dp"
            android:paddingEnd="10dp"
            android:paddingBottom="16dp"
            android:text=""
            android:textSize="14sp" />

        <View
            android:id="@+id/classification_bottom"
            android:layout_width="80dp"
            android:layout_height="3dp"
            android:background="@drawable/rounded_rectangle_classification_bottom_gray" />

    </LinearLayout>

</androidx.cardview.widget.CardView>